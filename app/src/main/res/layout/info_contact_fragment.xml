<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/edit_contact"
    android:orientation="vertical"
    android:divider="@drawable/separator"
    android:dividerPadding="4dp"
    android:showDividers="middle"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/info_contact_menu"/>
  <ScrollView
    android:id="@+id/info_contact_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
      <androidx.constraintlayout.widget.ConstraintLayout
          android:id="@+id/info_contact2"
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:divider="@drawable/separator"
          android:dividerPadding="4dp"
          android:orientation="vertical"
          android:showDividers="middle"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent">

          <ImageView
              android:id="@+id/photo_contact"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:visibility="visible"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintHorizontal_bias="0.0"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintVertical_bias="0.0"
              tools:srcCompat="@drawable/avatar" />

          <TableLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:visibility="visible"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toBottomOf="@+id/photo_contact">

              <TableRow
                  android:id="@+id/first_name_table"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  tools:visibility="visible">

                  <TextView
                      android:id="@+id/first_name_title"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="8dp"
                      android:layout_marginRight="8dp"
                      android:text="@string/name" />

                  <TextView
                      android:id="@+id/first_name"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:gravity="center" />

              </TableRow>

              <TableRow
                  android:id="@+id/second_name_table"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  tools:visibility="visible">

                  <TextView
                      android:id="@+id/second_name_title"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="8dp"
                      android:layout_marginRight="8dp"
                      android:text="@string/second_name" />

                  <TextView
                      android:id="@+id/second_name"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:gravity="center" />
              </TableRow>

              <TableRow
                  android:id="@+id/patronymic_table"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  tools:visibility="visible">

                  <TextView
                      android:id="@+id/patronymic_title"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="8dp"
                      android:layout_marginRight="8dp"
                      android:text="@string/patronymic" />

                  <TextView
                      android:id="@+id/patronymic"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:gravity="center" />
              </TableRow>

              <TableRow
                  android:id="@+id/number_table"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  tools:visibility="visible">

                  <TextView
                      android:id="@+id/main_number_title"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="8dp"
                      android:layout_marginRight="8dp"
                      android:text="Номер:" />

                  <TextView
                      android:id="@+id/main_number"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:gravity="center" />
              </TableRow>

              <TableRow
                  android:id="@+id/number_table2"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent">

                  <TextView
                      android:id="@+id/second_number_title"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="8dp"
                      android:layout_marginRight="8dp"
                      android:text="Второй номер:" />

                  <TextView
                      android:id="@+id/second_number"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:gravity="center" />
              </TableRow>

              <TableRow
                  android:id="@+id/number_table3"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent">

                  <TextView
                      android:id="@+id/second_number2_title"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="8dp"
                      android:layout_marginRight="8dp"
                      android:text="Рабочий номер:" />

                  <TextView
                      android:id="@+id/second_number2"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:gravity="center" />
              </TableRow>

              <TableRow
                  android:id="@+id/social_table"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent">

                  <TextView
                      android:id="@+id/social_contacts_title"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="8dp"
                      android:layout_marginRight="8dp"
                      android:text="Соцсеть:" />

                  <TextView
                      android:id="@+id/social_contacts"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:gravity="center" />
              </TableRow>

              <TableRow
                  android:id="@+id/social_table2"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent">

                  <TextView
                      android:id="@+id/social_contacts2_title"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="8dp"
                      android:layout_marginRight="8dp"
                      android:text="Соцсеть:" />

                  <TextView
                      android:id="@+id/social_contacts2"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:gravity="center" />
              </TableRow>

              <TableRow
                  android:id="@+id/social_table3"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent">

                  <TextView
                      android:id="@+id/social_contacts3_title"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="8dp"
                      android:layout_marginRight="8dp"
                      android:text="Соцсеть:" />

                  <TextView
                      android:id="@+id/social_contacts3"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:gravity="center" />
              </TableRow>

              <TableRow
                  android:id="@+id/about_table"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent">

                  <TextView
                      android:id="@+id/about_contact_title"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="8dp"
                      android:layout_marginRight="8dp"
                      android:text="Доп. информация:" />

                  <TextView
                      android:id="@+id/about_contact"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content" />
              </TableRow>
          </TableLayout>
      </androidx.constraintlayout.widget.ConstraintLayout>
   </ScrollView>
</LinearLayout>